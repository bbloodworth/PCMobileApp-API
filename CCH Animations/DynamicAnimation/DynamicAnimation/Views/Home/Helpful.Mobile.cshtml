@{
    ViewBag.Title = "Helpful";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <h3>
        Was this information helpful to you?
    </h3>

    <div class="form-horizontal">
        <br />
        <button data-icon="heart" name="button" value="YES" data-iconpos="top">Yes button</button>
        <button data-icon="delete" name="button" value="NO" data-iconpos="top">No button</button>
        <br />
    </div>

    <div class="form-horizontal">
        <button data-icon="video" name="replay" value="REPLAY" data-iconpos="top">Replay Animation</button>
    </div>
}
<br />
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


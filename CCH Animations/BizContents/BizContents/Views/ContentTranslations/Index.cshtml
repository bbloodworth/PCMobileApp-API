@model IEnumerable<BizContents.ContentTranslation>

@{
    ViewBag.Title = "Index";
}

<h2>Localized Content</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ContentID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContentTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Locale.LocaleDesc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContentCaptionText)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContentDesc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreateDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ContentID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ContentTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Locale.LocaleDesc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ContentCaptionText)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ContentDesc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreateDate)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { contentId = item.ContentID, localeId = item.LocaleID }) |
            @Html.ActionLink("Details", "Details", new { contentId = item.ContentID, localeId = item.LocaleID }) |
            @Html.ActionLink("Delete", "Delete", new { contentId = item.ContentID, localeId = item.LocaleID })
        </td>
    </tr>
}

</table>

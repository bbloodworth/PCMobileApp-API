@model IEnumerable<BizContents.CampaignContent>

@{
    ViewBag.Title = "Index";
}

<h2>Campaign Contents Mapping</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Campaign.CampaignDesc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Content.ContentID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Content.ContentTranslations.FirstOrDefault().ContentTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreateDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ActivationDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ExpirationDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserContentInd)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Campaign.CampaignDesc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Content.ContentID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Content.ContentTranslations.FirstOrDefault().ContentTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreateDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ActivationDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ExpirationDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserContentInd)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { campaignId = item.CampaignID, contentId = item.ContentID }) |
            @Html.ActionLink("Details", "Details", new { campaignId = item.CampaignID, contentId = item.ContentID }) |
            @Html.ActionLink("Delete", "Delete", new { campaignId = item.CampaignID, contentId = item.ContentID })
        </td>
    </tr>
}

</table>
